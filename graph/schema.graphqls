# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Query {
  users(limit: Int = 10, offset: Int = 0): [User!]!
}

type User {
  id: String!
  created_at: String
  updated_at: String
  first_name: String
  last_name: String
  phone_number: String!
  long: Float
  lat: Float
  user_type: Int
}

input NewUser {
  first_name: String!
  last_name: String!
  phone_number: String!
  long: Float
  lat: Float
}

type Mutation {
  createTodo(input: NewUser!): User!
}
